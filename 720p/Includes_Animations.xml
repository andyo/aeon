	<!-- Media windows -->
	<include name="Animation_ViewChangeFade">
		<animation effect="fade" start="100" end="0" time="400" condition="Window.IsActive(603)">Conditional</animation>	
	</include>
	
	<include name="Animation_MediaMenuSlideVertical">
		<animation type="Conditional" condition="[[Control.IsVisible(52) | Control.IsVisible(550) | Control.IsVisible(551) | Control.IsVisible(552) | Control.IsVisible(553)] + 
		[[Control.HasFocus(52) | Control.HasFocus(550) | Control.HasFocus(551) | Control.HasFocus(552) | Control.HasFocus(553)] | 
		Control.HasFocus(61) | Control.HasFocus(62) | Control.HasFocus(63) | Control.HasFocus(65) | 
		Control.HasFocus(600) | Control.HasFocus(601) | Control.HasFocus(602) | Control.HasFocus(603) | Control.HasFocus(604) | Control.HasFocus(605) | Control.HasFocus(606) | Control.HasFocus(607) | Control.HasFocus(608) | 
		Control.HasFocus(609) | Control.HasFocus(610) | Control.HasFocus(611) | Control.HasFocus(197) | Control.HasFocus(110) | Control.HasFocus(111) | Control.HasFocus(112) | Control.HasFocus(113) | Control.HasFocus(114) | 
		Control.HasFocus(115) | Control.HasFocus(116) | Control.HasFocus(117) | Control.HasFocus(118)]] | 

		[Control.IsVisible(50) + [Control.HasFocus(50) | Control.HasFocus(60)]] | [Control.IsVisible(51) + [Control.HasFocus(51) | Control.HasFocus(195) | Control.HasFocus(60)]] | [Control.IsVisible(58) + Control.HasFocus(58)] | 

		[Control.IsVisible(53) + [Control.HasFocus(53) | Control.HasFocus(71) | Control.HasFocus(85)]] | 
		
		[Control.IsVisible(555) | Control.IsVisible(556)] + [Control.HasFocus(555) | Control.HasFocus(556)] | Window.IsActive(2003) | 
		[Window.IsActive(503) + [Control.HasFocus(50) | Control.HasFocus(100) | Control.HasFocus(61) | Control.HasFocus(62)]]">

			<effect type="slide" start="0" end="-600,0" time="600" delay="0" easing="in" tween="cubic" />
		</animation>
	</include>
	
	<include name="Animation_ViewMenuSlideVertical">
		<animation effect="slide" start="-300,0" end="0,0" tween="cubic" easing="out" delay="400" time="500">WindowOpen</animation>
		<animation type="WindowClose">
			<effect type="slide" start="0,0" end="-300,0" time="600" />
		</animation>

		<animation effect="slide" start="-300,0" end="0,0" tween="cubic" easing="out" delay="400" time="500">Visible</animation>
		<animation type="Hidden">
			<effect type="slide" start="0,0" end="-300,0" time="600" />
		</animation>
	</include>

	<include name="Animation_WindowRSS">
		<animation type="visible" reversible="false">
			<effect type="slide" start="1100,0" end="0,0" time="200" delay="600" easing="out" tween="quadratic" />
